<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2E2654"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo"
        android:contentDescription="Logo ACAPRA"
        android:layout_marginEnd="16dp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#FFFFFF"
            android:text="@string/adicionar_pet"
            android:textAllCaps="false"
            android:textColor="#2E2654"
            tools:ignore="TextContrastCheck" />

        <Button
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#FFFFFF"
            android:text="@string/registrar_admin"
            android:textAllCaps="false"
            android:textColor="#2E2654"
            tools:ignore="TextContrastCheck" />

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/btn_default"
            android:backgroundTint="#FFFFFF"
            android:text="@string/formul_rios"
            android:textAllCaps="false"
            android:textColor="#2E2654"
            tools:ignore="TextSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintBounds" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FormulÃ¡rios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jo_o_carvalho"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:elevation="1dp"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/carlos_alberto"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:elevation="1dp"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ketlin_fernandes"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:elevation="1dp"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
